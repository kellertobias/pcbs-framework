{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@tobisk/pcbs/kicad-types": ["src/synth/kicad-types-placeholder.ts"],
      "@tobisk/pcbs/cli": ["src/cli/cli.ts"],
      "@tobisk/pcbs/cli/*": ["src/cli/*"],
      "@tobisk/pcbs": ["src/synth/index.ts"],
      "@tobisk/pcbs/*": ["src/synth/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".venv"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
