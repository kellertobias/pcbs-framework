{
  "name": "@tobisk/pcbs",
  "version": "1.7.0",
  "description": "TypeScript-based PCB Design Framework",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kellertobias/pcbs-framework.git"
  },
  "main": "./dist/src/synth/index.js",
  "types": "./dist/src/synth/index.d.ts",
  "bin": {
    "pcb": "./dist/src/cli/cli.js"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "postinstall": "python3 scripts/patch_circuit_synth.py && ts-node scripts/patch-opencascade.ts && ts-node -P tsconfig.json ./src/cli/cli.ts setup"
  },
  "keywords": [
    "kicad",
    "typescript",
    "pcb"
  ],
  "author": "Tobias S. Keller",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.2.3",
    "@types/pdfkit": "^0.17.5",
    "biome": "^0.3.3",
    "semantic-release": "^24.2.9",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.1",
    "opencascade.js": "^2.0.0-beta.b5ff984",
    "pdfkit": "^0.17.2",
    "playwright": "^1.58.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "vite-tsconfig-paths": "^6.1.1"
  }
}
